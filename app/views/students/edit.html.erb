<h1>Change Yourself!</h1>
<h2>Student: <%= @student.name %></h2>
<% form_for(@student, :url => { :controller => :students, :action => :update }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label 'Friendly Name (what people know you as)' %><br />
    <%= f.text_field :nickname %>
  </p>
    <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :option_id, "Option" %><br />
    <%= collection_select(:student, :option_id, @groups, :id, :name, {}, {:size => 10}) %> <br />
  </p>
  <p>
    <%= f.label :password %>
    <%= password_field(:student, :password, :size => 20) %>

  </p>
  
  <p>
  <%= f.submit "Go!" %> | <%= link_to 'Cancel', students_path %>
  </p>

  <p class="message">Passwords protect from vandalism. Use a simple password (ex. 123)<br />
  (Press Go! only once!)</p>
<% end %>




